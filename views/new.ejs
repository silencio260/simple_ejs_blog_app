<% include ./partials/header %>

<div class="ui main container text segment"> 

    <div class="ui huge header"> New Post</div>
    

    <form class="ui form" action="/blogs" method="POST">

        <div class="field">
            
            <label for="title">Title </label>
            <input type="text" name="blog[title]" id="title" placeholder="title">
        </div>
  
        <div class="field">
            <label >Image</label>
            <input type="text" name="blog[image]" id="image" placeholder="image url">
        </div>

        <div class="field">
            <label for="post">Content</label>
            <textarea name="blog[post]" id="post" cols="30" rows="10" > </textarea>
        </div>

        <button class="ui red basic button">Submit</button>
       
    </form>


</div>




