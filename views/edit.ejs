<% include ./partials/header %>

<div class="ui main container text segment"> 

    <div class="ui huge header"> Edit Post</div>
    

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">

        <div class="field">
            
            <label for="title">Title </label>
            <input type="text" name="blog[title]" id="title" value="<%= blog.title %>">
        </div>
  
        <div class="field">
            <label >Image</label>
            <input type="text" name="blog[image]" id="image" value="<%= blog.image %>">
        </div>

        <div class="field">
            <label for="post">Content</label>
            <textarea name="blog[post]" id="post" cols="30" rows="10" > <%= blog.post %> </textarea>
        </div>

        <button class="ui red basic button">Submit</button>
       
    </form>


</div>




